<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <!-- Bootstrap v3.0.3 -->
    <link href="/Content/bootstrap/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <style>
        .navbar-default {
            background-color: #333333
        }
        body
        .body-content {
            padding-left: 15px;
            padding-right: 15px;
            margin-top: 50px;
            padding-top: 50px;
        }
        #siteFooter {
            background-color: #23211D;
            color: #FFFFFF;
        }
        #footerMain {
            margin-bottom: 50px;
        }
        a {
            color: #AE3814
        }

        html, body {
            height: 100%;
            /* The html and body elements cannot have any padding or margin. */
        }

      /* Wrapper for page content to push down footer */
      #wrap {
        min-height: 100%;
        height: auto !important;
        height: 100%;
        /* Negative indent footer by it's height */
        margin: 0 auto -60px;
        padding-bottom: 60px;
      }

      /* Set the fixed height of the footer here */
      #push,
      #footer {
        height: 60px;
      }

      /* Lastly, apply responsive CSS fixes as necessary */
      @@media (max-width: 767px) {
        #footer {
          margin-left: -20px;
          margin-right: -20px;
          padding-left: 20px;
          padding-right: 20px;
        }
      }


    </style>
</head>
    
<body>
    
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a href="/" class="navbar-brand">
                    <img src="/images/Nav-Tree.png">
                </a>
                <button data-target="#bs-example-navbar-collapse-1" data-toggle="collapse" class="navbar-toggle" type="button">
                    <span class="sr-only">
                        Toggle navigation
                    </span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="bs-example-navbar-collapse-1" class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">

                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            Schedule
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/ComingSoon">Full Session Lineup</a></li>
                            <li><a href="/ComingSoon">Family Schedule</a></li>
                        </ul>
                    </li>

                    <li><a href="/ComingSoon">Speakers</a></li>

                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            Sponsors
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/ComingSoon">2014 Sponsors</a></li>
                            <li><a href="/Sponsorship">Sponsorship Info</a></li>

                        </ul>
                    </li>

                    <li class="dropdown">
                        <a data-toggle="dropdown" class="dropdown-toggle" href="#">
                            Resources
                            <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                            <li><a href="/Resources/ImportantDates">Important Dates</a></li>
                            
                            <li><a href="/Resources/Travel">Travel Information</a></li>
                            <li><a href="/Home/FAQ">Frequently Asked Questions</a></li>
                            
                            <li><a href="/Resources/GettingInvolved">Getting Involved</a></li>
                            <li><a href="/Home/CodeOfConduct">Code of Conduct</a></li>
                            <li><a href="/Home/CommitmentToDiversity">Commitment to Diversity</a></li>
                            <li><a href="/Home/AntiHarassmentPolicy">Anti-Harassment Policy</a></li>
                            <li><a href="/Sessions/CallForSpeakers">Call for Speakers Policy</a></li>
                        </ul>
                    </li>

                    <li class="gold-btn">
                        <a href="#">Buy Tickets</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content" id="wrap">
        @RenderBody()
    </div>
    
    <footer id="siteFooter">
    <div class="container" id="footerMain">
        <div class="clearfix" id="arrowUp">
            <img src="/images/footer-ArrowUp.png" class="img-responsive pull-right" onclick="window.scrollTo(0,0);">
        </div>
        <div class="row">
            <div class="col-md-6">
                <article>
                    <h3>NAVIGATION</h3>
